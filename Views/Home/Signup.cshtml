@model fake_social.Models.User

@{
    ViewData["Title"] = "Signup Page";
}

<form method="post">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" placeholder="Enter username" asp-for="Username" required>
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Enter email" asp-for="Email" required>
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter password" asp-for="Password" required>
    </div>

    <div class="form-group">
        <label for="phoneNumber">Phone number</label>
        <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="Enter phone number" asp-for="PhoneNumber">
        <small id="phoneNumberHelp" class="form-text text-muted">optional</small>
    </div>

    <input type="submit" value="SignUp">
</form>
@model fake_social.Models.User

@{
    ViewData["Title"] = "Login Page";
}

<div class="text-center">
    <form method="post">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Enter username" asp-for="Username" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" asp-for="Password" required>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="remeberMe">
            <label class="form-check-label" for="remeberMe">Check me out</label>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>